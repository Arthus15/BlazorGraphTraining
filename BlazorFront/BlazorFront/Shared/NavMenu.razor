<MatDrawer @bind-Opened="@Opened" Mode="@MatDrawerMode.Modal">
    <MatList>
        <MatListItem Href="/">
            <MatIcon Class="mat-list-icon" Style="padding-right:10px" Icon="home"></MatIcon> <MatListItemText Style="padding-top:5px">Home</MatListItemText>
        </MatListItem>
        <MatListItem Href="fetchdata">
            <MatIcon Class="mat-list-icon" Style="padding-right:10px" Icon="info"></MatIcon> <MatListItemText Style="padding-top:5px">About</MatListItemText>
        </MatListItem>
        <MatListItem>
            <MatIcon Class="mat-list-icon" Style="padding-right:10px" Icon="settings"></MatIcon> <MatListItemText Style="padding-top:5px">Settings</MatListItemText>
        </MatListItem>
    </MatList>
</MatDrawer>


@code
{
    [Parameter]
    public bool Opened { get; set; }

    [Parameter]
    public EventCallback<bool> OpenedChanged { get; set; }
}