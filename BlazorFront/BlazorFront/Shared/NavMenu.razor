<MatDrawer @bind-Opened="@Opened" Mode="@MatDrawerMode.Modal">
    <MatNavMenu>
        <MatNavItem Href="/"><MatIcon Icon="home"></MatIcon>&nbsp; Home</MatNavItem>
        <MatDivider></MatDivider>
        <MatNavSubMenu>
            <MatNavSubMenuHeader>
                <MatNavItem AllowSelection="false"><MatIcon Icon="help"></MatIcon>&nbsp; Technical Information</MatNavItem>
            </MatNavSubMenuHeader>
            <MatNavSubMenuList>                
                <MatNavItem Href="blazor"><MatIcon Icon="web"></MatIcon>&nbsp;Blazor</MatNavItem>
                <MatNavItem Href="graphql"><MatIcon Icon="data_usage"></MatIcon>&nbsp;GraphQL</MatNavItem>

            </MatNavSubMenuList>
        </MatNavSubMenu>
        <MatNavItem Href="about"><MatIcon Icon="info"></MatIcon>&nbsp; About</MatNavItem>
    </MatNavMenu>
</MatDrawer>


@code
{
    [Parameter]
    public bool Opened { get; set; }

    [Parameter]
    public EventCallback<bool> OpenedChanged { get; set; }
}